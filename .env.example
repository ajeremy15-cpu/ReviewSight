# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/reviewscope

# OpenAI API Key for AI-powered review analysis
OPENAI_API_KEY=your-openai-api-key-here

# NextAuth Secret for session management
NEXTAUTH_SECRET=your-nextauth-secret-here

# Optional: Alternative environment variable name for OpenAI API key
OPENAI_API_KEY_ENV_VAR=your-openai-api-key-here

# Application Settings
NODE_ENV=development
PORT=5000

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Optional: Email Configuration (for team invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.csv

# Optional: API Rate Limiting
API_RATE_LIMIT=100  # requests per minute
AI_DAILY_TOKEN_LIMIT=100000  # tokens per day per organization
